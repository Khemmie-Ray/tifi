---
  const numberOfCards = 5;
  // import { Image } from 'astro:assets';
  const playimage = '/public/assets/play.svg'; 

  const cardData = {
    title: 'A Day in the life of a Software Developer',
  };

  const cards = Array(numberOfCards).fill(cardData);
---

<div class="flex justify-between items-center flex-wrap w-[80%] mx-auto my-12 flex-col lg:flex-row">
  {cards.map((post, index) => (
    <div class="lg:h-[400px] h-auto lg:w-[32%] w-[100%] bg-[#101828] rounded-[8px] bg-blend-overlay text-white mb-6 py-2">
      <div class="w-[100%] bg-[#101828] relative ">
        <iframe width="100%" height="340" src="https://www.youtube.com/embed/vrG7OGT4-q4?si=gKNRYB9SVZ1HYNYx" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe><div class="overlay"></div>
      <img src="/src/image/play.svg" alt="" class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2" />
        </div>
      <h3 class="text-res-102 font-bold py-2 text-center">{post.title}</h3>
    </div>
  ))}
   <div class="lg:w-[32%] w-[100%] bg-[#101828] rounded-[8px] text-white mb-6 py-2 h-[400px] flex items-center justify-center flex-col text-center">
   <h3 class="w-[80%] text-[24px]">This could be your project as a part of our amazing curation.</h3>
     <button class="bg-white rounded-md text-[#101828] p-4 mt-4">LET'S TALK &#8599;</button>
  </div>
</div>

<style>
  .overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6); /* Semi-transparent black overlay */
  pointer-events: none; /* Allows clicks to pass through the overlay to the iframe */
}
  </style>